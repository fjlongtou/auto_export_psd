{
  "name": "psd2fgui",
  "version": "1.0.0",
  "description": "Convert PSD files to FairyGUI package",
  "main": "psd2gfui.js",
  "bin": {
    "psd2fgui": "./run.js"
  },
  "scripts": {
    "start": "node run.js",
    "watch": "node run.js watch",
    "convert": "node run.js convert",
    "clean": "if exist dist1 rmdir /s /q dist1",
    "prebuild": "npm run clean && mkdir dist1",
    "build": "pkg . --targets node16-win-x64 --output dist1/psd2fgui.exe --public"
  },
  "pkg": {
    "assets": [
      "psd2gfui.js",
      "psd2gfuiconfig.json",
      "node_modules/psd/**/*"
    ],
    "outputPath": "dist1",
    "scripts": [
      "run.js"
    ],
    "targets": [
      "node16-win-x64"
    ]
  },
  "keywords": [
    "psd",
    "fairygui",
    "converter"
  ],
  "author": "longtou",
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.1",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1",
    "psd": "^3.4.0",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
